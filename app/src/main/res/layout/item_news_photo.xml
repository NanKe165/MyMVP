<?xml version="1.0" encoding="utf-8"?>
<com.android.mvp.widget.view.MyCardView
    style="@style/news_summary_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="2dp"
    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/news_summary_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_size10"
            android:layout_marginRight="@dimen/padding_size10"
            android:layout_marginTop="@dimen/padding_size10"
            android:singleLine="true"
            android:textColor="@color/black_text_color"
            android:textSize="@dimen/foot_text_size"
            tools:text="武汉孕妇临盆被洪水围困 消防营救"/>

        <LinearLayout
            android:id="@+id/news_summary_photo_iv_group"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/news_summary_photo_iv_left"
                style="@style/news_summary_photo_iv"
                android:src="@mipmap/defalt_img"/>

            <ImageView
                android:id="@+id/news_summary_photo_iv_middle"
                style="@style/news_summary_photo_iv"
                tools:src="@mipmap/defalt_img"/>

            <ImageView
                android:id="@+id/news_summary_photo_iv_right"
                style="@style/news_summary_photo_iv"
                tools:src="@mipmap/defalt_img"/>
        </LinearLayout>

        <TextView
            android:id="@+id/news_summary_ptime_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="@dimen/padding_size10"
            android:textColor="@color/gray_text_color"
            android:textSize="@dimen/small_text_size"
            tools:text="05-28 20:09"/>
    </LinearLayout>

</com.android.mvp.widget.view.MyCardView>